-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th%th{:class => "hilite"}= link_to "Movie Title", movies_path(:sort_type => 'title'), :id => "title_header" 
      %th Rating
      %th= link_to "Release Date", :sort => "movie.release_date"
      %th More Info
      
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= release.date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
